@{
}
@model List<exam_sem3_mvc.Entities.Staff>

<h1>Staff Page</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
    Create new Category
</a>
<div class="col-6">
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>position</th>
        <th>department_id</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.name</td>
                    <td>@item.position</td>
                    <td>@item.department_id</td>
                    <td>
                        <a href="@Url.ActionLink("Edit","Staff", new {id=item.Id })"
                           class="btn btn-warning">Edit</a>
                        <a href="@Url.ActionLink("Delete","Staff", new {id=item.Id })"
                           onclick="return confirm('Bạn muốn xoá staff @item.name')"
                           class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>